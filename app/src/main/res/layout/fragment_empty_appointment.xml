<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.orionstark.barberros.controllers.fragments.EmptyAppointmentFragment"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textApp1"
                android:text="There is No Appointment for Today"
                android:textSize="36sp"
                android:textColor="#fff"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/colorPrimary"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_browse2"
                android:text="Browse barber"
                android:padding="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"
                android:background="@color/cardview_light_background"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
